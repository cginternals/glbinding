
// %t Type Integration

namespace std
{

template<>
struct hash<gl::%t>
{
    hash<%v>::result_type operator()(const gl::%t & t) const
    {
        return hash<%v>()(static_cast<%v>(t));
    }
};

}

GLBINDING_API bool operator==(const gl::%t & a, %v b);

GLBINDING_API bool operator< (const gl::%t & a, %v b);
GLBINDING_API bool operator<=(const gl::%t & a, %v b);
GLBINDING_API bool operator> (const gl::%t & a, %v b);
GLBINDING_API bool operator>=(const gl::%t & a, %v b);

GLBINDING_API bool operator==(%v a, const gl::%t & b);
